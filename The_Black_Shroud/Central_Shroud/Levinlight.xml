			<ChangeClass Job="Fisher" />
		</If>
		<ExFish Bait="Versatile Lure" condition="Condition.IsTimeBetween(17,18)" Sit="True" SitRate="1">
			<FishSpots>
				<FishSpot XYZ="-295.7599, 20.99179, 169.1394" Heading="5.806733" />
			</FishSpots>
		</ExFish>
		<ExFish Bait="Syrphid Basket" condition="not HasAtLeast(7920,&Levinlight;) and HasAtLeast(2597,1) and &TIME_WINDOW; and &WEATHER_PAST; and &WEATHER_NOW;"
				MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Chum="True">
