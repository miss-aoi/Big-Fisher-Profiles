<?xml version='1.0' encoding='utf8'?>
<!--
	Profile: Ghost Carp (7700)
	Authors: miss-aoi
-->
<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Ghost_Carp "1">
]>
<Profile>
	<Name>Ghost Carp</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Ghost Carp..." />
		<If condition="not HasAtLeast(2594,50)">
			<!--Butterworm-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':2594,'Amount':50,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not IsOnSubMap(70)">
			<LisbethTravel Area="Central Shroud" XYZ="211.2545, -32.20573, 395.1728" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<While condition="Condition.IsTimeBetween(20,21)">
			<Log Message="Waiting for window to open..." />
			<WaitTimer WaitTime="30" />
		</While>
		<ExFish Bait="Butterworm" condition="not HasAtLeast(7700,&Ghost_Carp;) and HasAtLeast(2594,1) and (Condition.IsTimeBetween(21,24) or Condition.IsTimeBetween(0,3)) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(148, 'Rain')"
				MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Chum="True">
			<FishSpots>
				<FishSpot XYZ="218.723, -33.06675, 384.3286" Heading="2.596586" />
				<FishSpot XYZ="230.0516, -31.35194, 387.275" Heading="2.393428" />
				<FishSpot XYZ="248.1566, -30.45172, 394.424" Heading="3.23328" />
			</FishSpots>
			<Keepers>
				<Keeper name="Ghost Carp" />
			</Keepers>
			<SurfaceSlaps />
		</ExFish>
		<LLoadProfile Path="../../Start.xml" />
	</Order>
	<GrindAreas />
	<CodeChunks />
</Profile>