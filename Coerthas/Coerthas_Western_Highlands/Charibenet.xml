				<FishSpot XYZ="697.2401, 130.4616, -814.8465" Heading="2.989224" /> -->
			</FishSpots>
			<Keepers>
				<Keeper name="Ice Faerie" />
			</Keepers>
		</ExFish>
		<While condition="IsTimeBetween(20,24)">
			<Log Message="Waiting for window to open..." />
			<WaitTimer WaitTime="30" />
		</While>
		<!-- Catch 5th Ice Faerie once window starts -->
		<ExFish Bait="Purse Web Spider" Condition="not Core.Player.HasAura(568) and not HasAtLeast(17592,&Charibenet;) and HasAtLeast(12705,1)" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Chum="True">
			<FishSpots>
				<FishSpot XYZ="700.9606, 130.4927, -812.5688" Heading="2.43003" />
				<!-- <FishSpot XYZ="705.4149, 130.772, -807.4819" Heading="2.409086" />
				<FishSpot XYZ="697.2401, 130.4616, -814.8465" Heading="2.989224" /> -->
			</FishSpots>
			<Keepers>
				<Keeper name="Ice Faerie" />
			</Keepers>
		</ExFish>
		<!-- Go after Charibenet -->
		<ExFish Bait="Purse Web Spider" Condition="Core.Player.HasAura(568) and not HasAtLeast(17592,&Charibenet;) and HasAtLeast(12705,1) and IsTimeBetween(0,3) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(397, 'Blizzards')" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Mooch="2" Patience="Patience2" MinimumGPPatience="650">
			<PatientTugs>
				<PatienceTug moochLevel="0" TugType="Light" />
				<PatienceTug moochLevel="1" TugType="Light" />
			</PatientTugs>
			<FishSpots>
				<FishSpot XYZ="700.9606, 130.4927, -812.5688" Heading="2.43003" />
				<!-- <FishSpot XYZ="705.4149, 130.772, -807.4819" Heading="2.409086" />
				<FishSpot XYZ="697.2401, 130.4616, -814.8465" Heading="2.989224" /> -->
			</FishSpots>
			<Keepers>
				<Keeper name="Charibenet" />
			</Keepers>
			<SurfaceSlaps />
		</ExFish>
		<If condition="HasAtLeast(12715,1)">
			<Desynth ItemIds="12715" DesynthDelay="6000" DesynthTimeout="10" />
