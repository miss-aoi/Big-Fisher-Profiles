<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Charibenet "1">
]>
<Profile>
	<Name>Charibenet</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Charibenet..." />
		<If condition="not HasAtLeast(12705,50)">
			<!--Purse Web Spider-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':12705,'Amount':50,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not HasAtLeast(28634,3)">
			<!--Metal Spinner-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':28634,'Amount':3,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not IsOnSubMap(2202)">
			<LisbethTravel Area="Coerthas Western Highlands" XYZ="-32.91364, 89.56251, -571.7196" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<!-- Catch 4 Ice Faerie leading up to window -->
		<ExFish Bait="Metal Spinner" Condition="not Core.Player.HasAura(568) and not HasAtLeast(12715,4) and HasAtLeast(12705,1) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(397, 'Blizzards')" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-21.4197, 89.14197, -559.7135" Heading="4.573871" />
				<FishSpot XYZ="-32.44563, 89.25902, -571.203" Heading="6.274516" />
				<FishSpot XYZ="-48.33238, 89.17406, -557.7254" Heading="1.37154" />
			</FishSpots>
			<Keepers>
				<Keeper name="Ice Faerie" />
			</Keepers>
		</ExFish>
		<While condition="IsTimeBetween(20,24)">
			<Log Message="Waiting for window to open..." />
			<WaitTimer WaitTime="30" />
		</While>
		<!-- Catch 5th Ice Faerie once window starts -->
		<ExFish Bait="Metal Spinner" Condition="not Core.Player.HasAura(568) and not HasAtLeast(17592,&Charibenet;) and HasAtLeast(12705,1) and IsTimeBetween(0,3) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(397, 'Blizzards')" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-21.4197, 89.14197, -559.7135" Heading="4.573871" />
				<FishSpot XYZ="-32.44563, 89.25902, -571.203" Heading="6.274516" />
				<FishSpot XYZ="-48.33238, 89.17406, -557.7254" Heading="1.37154" />
			</FishSpots>
			<Keepers>
				<Keeper name="Ice Faerie" />
			</Keepers>
		</ExFish>
		<!-- Go after Charibenet -->
		<ExFish Bait="Purse Web Spider" Condition="Core.Player.HasAura(568) and not HasAtLeast(17592,&Charibenet;) and HasAtLeast(12705,1) and IsTimeBetween(0,3) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(397, 'Blizzards')" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" Mooch="2" Patience="Patience2" MinimumGPPatience="650">
			<PatientTugs>
				<PatienceTug moochLevel="0" TugType="Light" />
				<PatienceTug moochLevel="1" TugType="Light" />
			</PatientTugs>
			<FishSpots>
				<FishSpot XYZ="-21.4197, 89.14197, -559.7135" Heading="4.573871" />
				<FishSpot XYZ="-32.44563, 89.25902, -571.203" Heading="6.274516" />
				<FishSpot XYZ="-48.33238, 89.17406, -557.7254" Heading="1.37154" />
			</FishSpots>
			<Keepers>
				<Keeper name="Charibenet" />
			</Keepers>
			<SurfaceSlaps />
		</ExFish>
		<If condition="HasAtLeast(12715,1)">
			<Desynth ItemIds="12715" DesynthDelay="6000" DesynthTimeout="10" />
		</If>
		<LLoadProfile Path="../../Start.xml" />
