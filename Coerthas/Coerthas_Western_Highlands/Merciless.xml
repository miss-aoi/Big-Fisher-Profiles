			<LisbethTravel Area="Coerthas Western Highlands" XYZ="-447.2483, 90.92711, -659.5029" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
