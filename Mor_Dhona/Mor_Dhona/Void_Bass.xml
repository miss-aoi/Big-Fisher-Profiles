<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Void_Bass "1">

	<!-- DO NOT CHANGE -->
	<!ENTITY TIME_WINDOW  "True">
	<!ENTITY WEATHER_PAST "ExBuddy.Helpers.SkywatcherPlugin.PredictWeatherInZone(156, TimeSpan.FromHours(-8), 'Clear Skies', 'Fair Skies')">
