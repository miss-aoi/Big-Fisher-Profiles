<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Nhaamas_Treasure "1">
]>
<Profile>
	<Name>Nhaama's Treasure</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Nhaama's Treasure..." />
		<If condition="not HasAtLeast(20619,3)">
			<!--Suspending Minnow-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':20619,'Amount':3,'Enabled':true,'Type':'Exchange'}]" />
		</If>
		<If condition="not IsOnSubMap(2842)">
			<LisbethTravel Area="The Azim Steppe" XYZ="-406.8679, 2.301703, 595.6713" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<While condition="IsTimeBetween(3,4)">
			<Log Message="Waiting for window to open..." />
			<WaitTimer WaitTime="30" />
		</While>
			<ExFish Bait="Suspending Minnow" condition="not HasAtLeast(24891,&Nhaamas_Treasure;) and HasAtLeast(20619,1) and IsTimeBetween(4,8) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(622, 'Clear Skies', 'Fair Skies') and ExBuddy.Helpers.SkywatcherPlugin.PredictWeatherInZone(622, TimeSpan.FromHours(-8), 'Rain')" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Chum="True">
				<FishSpots>
					<FishSpot XYZ="-414.9601, 1.498228, 598.4959" Heading="4.981417" />
					<FishSpot XYZ="-440.6925, 1.448226, 608.5067" Heading="3.871379" />
					<FishSpot XYZ="-454.2392, 1.464812, 576.8029" Heading="0.5182528" />
				</FishSpots>
				<Keepers>
					<Keeper name="Nhaama's Treasure" />
				</Keepers>
				<SurfaceSlaps>
					<SurfaceSlep Name="Nhaama's Boon"/>
					<SurfaceSlep Name="Brassfish"/>
				</SurfaceSlaps>
			</ExFish>
		<LLoadProfile Path="../../Start.xml" />
	</Order>
	<GrindAreas />
	<CodeChunks />
</Profile>