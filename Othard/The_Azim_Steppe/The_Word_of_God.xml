<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY The_Word_of_God "1">

	<!-- DO NOT CHANGE -->
	<!ENTITY TIME_WINDOW  "Condition.IsTimeBetween(20,24)">
