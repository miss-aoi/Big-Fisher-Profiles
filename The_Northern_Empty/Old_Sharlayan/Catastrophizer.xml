				<FishSpot XYZ="-170.4314, 8.00656, -20.56651" Heading="3.363976" />
				<FishSpot XYZ="-166.925, 8.050853, -30.69417" Heading="4.811202" />
				<FishSpot XYZ="-179.5398, 7.847175, -29.2686" Heading="1.66961" />
			</FishSpots>
			<Keepers>
				<Keeper name="Catastrophizer" />
			</Keepers>
			<SurfaceSlaps />
