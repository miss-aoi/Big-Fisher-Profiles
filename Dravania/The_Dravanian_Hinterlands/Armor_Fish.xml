<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Armor_Fish "1">

	<!-- DO NOT CHANGE -->
	<!ENTITY TIME_WINDOW  "Condition.IsTimeBetween(1,4)">
	<!ENTITY WEATHER_PAST "True">
	<!ENTITY WEATHER_NOW  "ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(398, 'Clear Skies')">
]>
<Profile>
	<Name>Armor Fish</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Armor Fish..." />
		<If Condition="not IsOnMap(398)">
			<RunCode Name="AnglersArtToGP"/>
		</If>
		<If condition="not HasAtLeast(12705,50)">
			<!--Purse Web Spider-->
			<Log Message="Farming more Purse Web Spider with Lisbeth." />
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':12705,'Amount':50,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not IsOnSubMap(2011)">
			<LisbethTravel Area="The Dravanian Hinterlands" XYZ="-59.0484, 152.7173, 733.5823" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<Dismount/>
		<If condition="HasAtLeast(12757,1)">
			<Desynth ItemIds="12757" DesynthDelay="6000" DesynthTimeout="10" />
		</If>
		<ExFish Bait="Purse Web Spider" Condition="not Core.Player.HasAura(568) and not HasAtLeast(17590,&Armor_Fish;) and HasAtLeast(28634,1) and not HasAtLeast(12757,5)"
				MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-44.38216, 152.3128, 729.8894" Heading="1.498923" />
			</FishSpots>
			<Keepers>
				<Keeper name="Hedgemole Cricket" />
			</Keepers>
		</ExFish>
		<While condition="not Condition.IsTimeBetween(1,4)">
			<Log Message="Waiting for window to open..." />
			<WaitTimer WaitTime="30" />
		</While>
		<ExFish Bait="Purse Web Spider" Condition="not Core.Player.HasAura(568) and not HasAtLeast(17590,&Armor_Fish;) and HasAtLeast(28634,1) and not HasAtLeast(12757,6) and &TIME_WINDOW; and &WEATHER_PAST; and &WEATHER_NOW;"
				MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-44.38216, 152.3128, 729.8894" Heading="1.498923" />
			</FishSpots>
			<Keepers>
				<Keeper name="Hedgemole Cricket" />
			</Keepers>
		</ExFish>
		<ExFish Bait="Purse Web Spider" Condition="Core.Player.HasAura(568) and not HasAtLeast(17590,&Armor_Fish;) and HasAtLeast(28634,1) and Condition.IsTimeBetween(1,4) and &TIME_WINDOW; and &WEATHER_PAST; and &WEATHER_NOW;"
				MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1"
				Mooch="1" Patience="Patience2" MinimumGPPatience="650" UseMooch2="True">
			<FishSpots>
				<FishSpot XYZ="-44.38216, 152.3128, 729.8894" Heading="1.498923" />
			</FishSpots>
			<Keepers>
				<Keeper name="Hedgemole Cricket" action="Mooch" />
				<Keeper name="Armor Fish" />
			</Keepers>
			<ReverseHooks>
				<ReverseHook MoochLevel="1" TugType="Heavy" />
			</ReverseHooks>
			<SurfaceSlaps />
		</ExFish>
		<RunCode Name="StopFishing"/>
		<If condition="HasAtLeast(12757,1)">
			<Desynth ItemIds="12757" DesynthDelay="6000" DesynthTimeout="10" />
		</If>
		<LLoadProfile Path="../../Start.xml" />
	</Order>
	<GrindAreas />
	<CodeChunks>
		<CodeChunk Name="StopFishing">
			<![CDATA[
				SpellData data;
				if(ActionManager.CurrentActions.TryGetValue("Quit", out data))
				{
					await Buddy.Coroutines.Coroutine.Sleep(500);
					ff14bot.Managers.ActionManager.DoAction(299, Core.Player);
					await Buddy.Coroutines.Coroutine.Sleep(2000);
				}
			]]>
		</CodeChunk>
		<CodeChunk Name="AnglersArtToGP">
			<![CDATA[
				while (Core.Player.Auras.GetAuraStacksById(2778) >= 3)
				{
					await Coroutine.Sleep(500);
					ff14bot.Managers.ActionManager.DoAction(26804, Core.Player);
					await Coroutine.Sleep(1000);
				}
			]]>
		</CodeChunk>
	</CodeChunks>
</Profile>