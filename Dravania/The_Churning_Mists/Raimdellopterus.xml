<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Raimdellopterus "1">
]>
<Profile>
	<Name>Raimdellopterus</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Raimdellopterus..." />
		<If condition="not HasAtLeast(12712,50)">
			<!--Giant Crane Fly-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':12712,'Amount':50,'Enabled':true,'Type':'Exchange'}]" />
		</If>
		<If condition="not IsOnSubMap(2048)">
			<LisbethTravel Area="The Churning Mists" XYZ="-128.8666, 162.6906, -793.0759" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<!-- Catch 4 Rudderfish -->
		<ExFish Bait="Giant Crane Fly" Condition="not Core.Player.HasAura(568) and not HasAtLeast(12805,4) and not HasAtLeast(17593,&Raimdellopterus;) and HasAtLeast(12712,1) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(400, 'Gales')"
				MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Chum="True" IdenticalCast="True">
			<FishSpots>
				<FishSpot XYZ="-141.6965, 162.6906, -797.8688" Heading="3.291184" />
			</FishSpots>
			<Keepers>
				<Keeper name="Rudderfish" />
			</Keepers>
			<SurfaceSlaps>
				<SurfaceSlap Name="Storm Chaser"/>
			</SurfaceSlaps>
		</ExFish>
		<While condition="Condition.IsTimeBetween(4,5)">
			<Log Message="Waiting for window to open..." />
			<WaitTimer WaitTime="30" />
		</While>
		<!-- Catch last fish once window starts -->
		<ExFish Bait="Giant Crane Fly" Condition="not Core.Player.HasAura(568) and not HasAtLeast(17593,&Raimdellopterus;) and HasAtLeast(12712,1) and Condition.IsTimeBetween(5,8) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(400, 'Gales')"
				MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-141.6965, 162.6906, -797.8688" Heading="3.291184" />
			</FishSpots>
			<Keepers>
				<Keeper name="Rudderfish" />
			</Keepers>
			<SurfaceSlaps>
				<SurfaceSlap Name="Storm Chaser"/>
			</SurfaceSlaps>
		</ExFish>
		<!-- Go after Raimdellopterus -->
		<ExFish Bait="Giant Crane Fly" Condition="Core.Player.HasAura(568) and not HasAtLeast(17593,&Raimdellopterus;) and HasAtLeast(12712,1) and Condition.IsTimeBetween(5,8) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(400, 'Gales')"
				MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1"
				Mooch="2" Patience="Patience2" MinimumGPPatience="650">
			<PatientTugs>
				<PatienceTug moochLevel="0" TugType="Medium" />
				<PatienceTug moochLevel="1" TugType="Medium" />
			</PatientTugs>
			<FishSpots>
				<FishSpot XYZ="-141.6965, 162.6906, -797.8688" Heading="3.291184" />
			</FishSpots>
			<Keepers>
				<Keeper name="Raimdellopterus" />
			</Keepers>
			<SurfaceSlaps>
				<SurfaceSlap Name="Storm Chaser"/>
			</SurfaceSlaps>
		</ExFish>
		<RunCode Name="StopFishing"/>
		<If condition="HasAtLeast(12805,1)">
			<Desynth ItemIds="12805" DesynthDelay="6000" DesynthTimeout="10" />
		</If>
		<LLoadProfile Path="../../Start.xml" />
	</Order>
	<GrindAreas />
	<CodeChunks>
		<CodeChunk Name="StopFishing">
			<![CDATA[
				SpellData data;
				if(ActionManager.CurrentActions.TryGetValue("Quit", out data))
				{
					await Buddy.Coroutines.Coroutine.Sleep(500);
					ff14bot.Managers.ActionManager.DoAction(299, Core.Player);
					await Buddy.Coroutines.Coroutine.Sleep(2000);
				}
			]]>
		</CodeChunk>
	</CodeChunks>
</Profile>