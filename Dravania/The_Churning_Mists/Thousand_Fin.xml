<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Thousand_Fin "1">

	<!-- DO NOT CHANGE -->
	<!ENTITY TIME_WINDOW  "True">
	<!ENTITY WEATHER_PAST "ExBuddy.Helpers.SkywatcherPlugin.PredictWeatherInZone(400, TimeSpan.FromHours(-8), 'Clouds')">
