]>
<Profile>
	<Name>Sovereign Shadow</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Sovereign Shadow..." />
		<If condition="not HasAtLeast(36591,50)">
			<!--Mayfly-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':36591,'Amount':50,'Enabled':true,'Type':'Exchange'}]" />
		</If>
		<If condition="not IsOnSubMap(3917)">
			<LisbethTravel Area="Garlemald" XYZ="-1.396667, -6.484803, -737.0667" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<While condition="IsTimeBetween(1,2)">
			<Log Message="Waiting for window to open..." />
                        <WaitTimer WaitTime="30" />
		</While>
		<While condition="not HasAtLeast(37849,&Sovereign_Shadow;) and HasAtLeast(36591,1) and IsTimeBetween(2,8) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(958, 'Snow') and ExBuddy.Helpers.SkywatcherPlugin.PredictWeatherInZone(958, TimeSpan.FromHours(-8), 'Clouds', 'Fog')">
			<ExFish Bait="Mayfly" condition="not HasAtLeast(37849,&Sovereign_Shadow;) and HasAtLeast(36591,1) and IsTimeBetween(2,8) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(958, 'Snow') and ExBuddy.Helpers.SkywatcherPlugin.PredictWeatherInZone(958, TimeSpan.FromHours(-8), 'Clouds', 'Fog')" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" Cordial="Auto" Chum="True">
				<FishSpots>
					<FishSpot XYZ="-1.374654, -6.484802, -738.3751" Heading="3.120423" />
					<FishSpot XYZ="21.5424, -6.484802, -738.3272" Heading="2.917261" />
					<FishSpot XYZ="-31.91328, -6.484802, -738.3767" Heading="3.271253" />
				</FishSpots>
				<Keepers>
					<Keeper name="Sovereign Shadow" />
				</Keepers>
				<SurfaceSlaps />
			</ExFish>
		</While>
		<LLoadProfile Path="../../Start.xml" />
	</Order>
	<GrindAreas />
	<CodeChunks />
</Profile>