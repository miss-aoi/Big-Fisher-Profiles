<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Mud_Golem "1">
]>
<Profile>
	<Name>Mud Golem</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Mud Golem..." />
		<If condition="not HasAtLeast(2594,50)">
			<!--Butterworm-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':2594,'Amount':50,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not IsOnSubMap(245)">
			<LisbethTravel Area="Western Thanalan" XYZ="-196.8338, 15.78721, -273.8176" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<While condition="Condition.IsTimeBetween(20,21)">
			<Log Message="Waiting for window to open..." />
			<WaitTimer WaitTime="30" />
		</While>
		<ExFish Bait="Butterworm" condition="not HasAtLeast(7706,&Mud_Golem;) and HasAtLeast(2594,1) and (Condition.IsTimeBetween(21,24) or Condition.IsTimeBetween(0,3))" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-169.3685, 14.51384, -295.3834" Heading="1.908895" />
				<FishSpot XYZ="-199.3176, 14.51384, -319.2296" Heading="4.547829" />
				<FishSpot XYZ="-199.7656, 14.51385, -289.5831" Heading="2.918395" />
			</FishSpots>
			<Keepers>
				<Keeper name="Mud Golem" />
			</Keepers>
			<SurfaceSlaps />
		</ExFish>
		<LLoadProfile Path="../../Start.xml" />
	</Order>
	<GrindAreas />
	<CodeChunks />
</Profile>