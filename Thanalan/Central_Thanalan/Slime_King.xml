<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Slime_King "1">
]>
<Profile>
	<Name>Slime King</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Slime King..." />
		<If condition="not HasAtLeast(2588,50)">
			<!--Crayfish Ball-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':2588,'Amount':50,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not IsOnSubMap(248)">
			<LisbethTravel Area="Central Thanalan" XYZ="-169.8532, -30.49648, 95.41872" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<While condition="IsTimeBetween(18,19)">
			<Log Message="Waiting for window to open..." />
			<WaitTimer WaitTime="30" />
		</While>
		<ExFish Bait="Crayfish Ball" condition="not HasAtLeast(7698,&Slime_King;) and HasAtLeast(2588,1) and IsTimeBetween(19,24)" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="HiCordial" Sit="True" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-148.8995, -32, 111.208" Heading="4.601738" />
				<FishSpot XYZ="-173.101, -32, 103.916" Heading="6.072006" />
				<FishSpot XYZ="-198.8511, -32, 112.3825" Heading="4.800707" />
			</FishSpots>
			<Keepers>
				<Keeper name="Slime King" />
			</Keepers>
			<SurfaceSlaps />
		</ExFish>
		<LLoadProfile Path="../../Start.xml" />
	</Order>
	<GrindAreas />
	<CodeChunks />
</Profile>