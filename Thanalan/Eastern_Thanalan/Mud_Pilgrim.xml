<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Mud_Pilgrim "1">
]>
<Profile>
	<Name>Mud Pilgrim</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Mud Pilgrim..." />
		<If condition="not HasAtLeast(2592,50)">
			<!--Midge Basket-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':2592,'Amount':50,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not IsOnSubMap(250)">
			<LisbethTravel Area="Eastern Thanalan" XYZ="-222.5766, -36.75444, 147.0753" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<While condition="Condition.IsTimeBetween(16,17)">
			<Log Message="Waiting for window to open..." />
			<WaitTimer WaitTime="30" />
		</While>
		<ExFish Bait="Midge Basket" condition="not HasAtLeast(7702,&Mud_Pilgrim;) and HasAtLeast(2592,1) and (Condition.IsTimeBetween(17,24) or Condition.IsTimeBetween(0,7)) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(145, 'Rain', 'Showers')" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-202.5141, -37.89638, 161.2821" Heading="4.560738" />
				<FishSpot XYZ="-206.6966, -37.5697, 144.3847" Heading="6.121063" />
				<FishSpot XYZ="-221.8155, -36.71885, 148.0304" Heading="0.6253672" />
			</FishSpots>
			<Keepers>
				<Keeper name="Mud Pilgrim" />
			</Keepers>
			<SurfaceSlaps />
		</ExFish>
		<LLoadProfile Path="../../Start.xml" />
	</Order>
	<GrindAreas />
	<CodeChunks />
</Profile>