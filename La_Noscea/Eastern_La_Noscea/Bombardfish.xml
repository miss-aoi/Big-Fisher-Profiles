		<If condition="not HasAtLeast(2598,50)">
			<!--Herring Ball-->
			<Log Message="Need more Herring Ball. Getting more with Lisbeth." />
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':2598,'Amount':50,'Enabled':true,'Type':'Purchase'}]" />
