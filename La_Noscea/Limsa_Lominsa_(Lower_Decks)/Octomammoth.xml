<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Octomammoth "1">

	<!-- DO NOT CHANGE -->
	<!ENTITY TIME_WINDOW  "Condition.IsTimeBetween(9,17)">
