			<FishSpots>
				<FishSpot XYZ="591.8521, 4.822018, 471.4789" Heading="5.331914" />
				<FishSpot XYZ="604.5823, 5.038345, 492.6462" Heading="0.09802127" />
				<FishSpot XYZ="645.257, 5.578633, 556.2516" Heading="5.217016" />
			</FishSpots>
			<Keepers>
				<Keeper name="Armorer" />
			</Keepers>
			<SurfaceSlaps />
