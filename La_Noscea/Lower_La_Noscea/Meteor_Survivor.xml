<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Meteor_Survivor "1">
]>
<Profile>
	<Name>Meteor Survivor</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Meteor Survivor..." />
		<If condition="not HasAtLeast(2591,50)">
			<!--Rat Tail-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':2591,'Amount':50,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not IsOnSubMap(338)">
			<LisbethTravel Area="Lower La Noscea" XYZ="-185.0453, -0.3133438, 727.9094" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<While condition="Condition.IsTimeBetween(2,3)">
			<Log Message="Waiting for window to open..." />
			<WaitTimer WaitTime="30" />
		</While>
		<ExFish Bait="Rat Tail" condition="not HasAtLeast(7903,&Meteor_Survivor;) and HasAtLeast(2591,1) and Condition.IsTimeBetween(3,5) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(135, 'Clouds', 'Fog', 'Wind')"
				MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Sit="True" SitRate="1" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-166.2906, -0.271, 748.7253" Heading="1.937045" />
				<FishSpot XYZ="-196.9584, -0.1789726, 700.2988" Heading="4.19792" />
				<FishSpot XYZ="-232.1735, -0.2515026, 666.2292" Heading="5.016819" />
			</FishSpots>
			<Keepers>
				<Keeper name="Meteor Survivor" />
			</Keepers>
			<SurfaceSlaps />
		</ExFish>
		<LLoadProfile Path="../../Start.xml" />
	</Order>
	<GrindAreas />
	<CodeChunks />
</Profile>