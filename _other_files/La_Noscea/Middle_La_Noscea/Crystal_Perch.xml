<Profile>
	<Name>Crystal Perch</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Crystal Perch..." />
		<If condition="not HasAtLeast(2594,50)">
			<!--Butterworm-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':2594,'Amount':50,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not IsOnSubMap(192)">
			<LisbethTravel Area="Middle La Noscea" XYZ="-12.28817, 13.29832, -455.9037" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<While condition="not HasAtLeast(7682,&Crystal_Perch;) and HasAtLeast(2594,1) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(134, 'Clouds', 'Fog', 'Wind')">
			<ExFish Bait="Butterworm" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" Cordial="Auto" Sit="True" Chum="True">
