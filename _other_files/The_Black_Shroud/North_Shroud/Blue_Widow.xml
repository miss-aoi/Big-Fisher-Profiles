<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Blue_Widow "1">
]>
<Profile>
	<Name>Blue Widow</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Blue Widow..." />
		<If condition="not HasAtLeast(2611,50)">
			<!--Floating Minnow-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':2611,'Amount':3,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not IsOnSubMap(85)">
			<LisbethTravel Area="North Shroud" XYZ="235.4475, -27.25044, 163.2124" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<While condition="IsTimeBetween(8,9)">
			<WaitTimer WaitTime="30" />
		</While>
		<While condition="not HasAtLeast(7699,&Blue_Widow;) and HasAtLeast(2611,1) and IsTimeBetween(9,14)">
			<ExFish Bait="Floating Minnow" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" Cordial="Auto" Chum="True">
				<FishSpots>
					<FishSpot XYZ="189.6587, -30.66909, 195.119" Heading="1.228501" />
					<FishSpot XYZ="205.4642, -28.51582, 182.1846" Heading="0.5101242" />
					<FishSpot XYZ="223.7824, -29.00599, 175.474" Heading="6.012096" />
				</FishSpots>
				<Keepers>
					<Keeper name="Blue Widow" />
				</Keepers>
				<SurfaceSlaps />
			</ExFish>
		</While>
		<LLoadProfile Path="../../Start.xml" />
	</Order>
	<GrindAreas />
	<CodeChunks />
</Profile>