<!-- 		

			Big Fish Profile:

			You need some Big Fish? Switch Variable from 0 to 1.
			For some Baits you need Miner, Gardener and Crafter.
-->

<Profile>
  <Name>Start Fishing</Name>
  <BehaviorDirectory></BehaviorDirectory>
  <Order>
  
	<!-- Lisbeth check -->
	<If condition="not LisbethPresent">
	  <LLToast message="This profile requires the BotBase Lisbeth to run."/>
	  <LLToast message="Please make sure Lisbeth is installed correctly before proceeding."/>
	  <StopBot/>
	</If>
	<If condition="LisbethPresent">
	  <Log Message="Lisbeth found. Starting profile..." />
	</If>

	<!-- Food Checking Crab Cakes HQ-->
	<If condition="not HasAtLeast(30481,50)">
		<Lisbeth Json="[{'Item': 30481,'Group': 0,'Amount': 99,'Collectable': false,'QuickSynth': false,'SuborderQuickSynth': false,'Hq': true,'Food': 0,'Primary': true,'Type': 'Culinarian','Enabled': true,'Manual': 0,'Medicine': 0}]"/>
	</If>
	
	<!-- Mecicine Checking Hi-Cordial -->
	<If condition="not HasAtLeast(12669,50)">
			<Lisbeth Json="[{'Group':1,'Item':12669,'Amount':99,'Enabled':true,'Type':'Exchange'}]"/>
	</If>
		
	<!-- Fisher Checking -->
	<If Condition="not ClassName == ClassJobType.Fisher">
		<ChangeClass Job="Fisher" />
    </If>

	<!-- Load Location -->	

	<!-- Load Goldenfin -->
	<If Condition="&Goldenfin; == 1 and IsTimeBetween(9,14) and not HasAtLeast(7685,1)"> <!-- Zeit -->
