<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Sea_Butterfly "1">
]>
<Profile>
	<Name>Sea Butterfly</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Sea Butterfly..." />
		<If condition="not HasAtLeast(12712,50)">
			<!--Giant Crane Fly-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':12712,'Amount':50,'Enabled':true,'Type':'Exchange'}]" />
		</If>
		<If condition="not HasAtLeast(28634,3)">
			<!--Metal Spinner-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':28634,'Amount':3,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not IsOnSubMap(2129)">
			<LisbethTravel Area="The Sea of Clouds" XYZ="-342.964, 20.93506, -820.5392" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<!-- Prep for Fisher's Intuition -->
		<ExFish Bait="Metal Spinner" Condition="not HasAtLeast(12810,3) and not HasAtLeast(12753,3) and not HasAtLeast(17591,&Sea_Butterfly;) and HasAtLeast(12712,1)" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-352.8858, 19.60465, -832.8619" Heading="3.788245" Sit="True" />
			</FishSpots>
			<Keepers>
				<Keeper name="Scorpionfly" />
				<Keeper name="Sky Faerie" />
			</Keepers>
		</ExFish>
		<While condition="IsTimeBetween(0,5)">
			<Log Message="Waiting for window to open..." />
			<WaitTimer WaitTime="30" />
		</While>
		<!-- Get Fisher's Intuition -->
		<ExFish Bait="Metal Spinner" Condition="not Core.Player.HasAura(568) and not HasAtLeast(17591,&Sea_Butterfly;) and HasAtLeast(12712,1) and IsTimeBetween(5,7) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(401, 'Clear Skies')" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-352.8858, 19.60465, -832.8619" Heading="3.788245" Sit="True" />
			</FishSpots>
			<Keepers>
				<Keeper name="Scorpionfly" />
				<Keeper name="Sky Faerie" />
			</Keepers>
		</ExFish>
		<!-- Go after Goal -->
		<ExFish Bait="Giant Crane Fly" Condition="Core.Player.HasAura(568) and not HasAtLeast(17591,&Sea_Butterfly;) and HasAtLeast(12712,1) and IsTimeBetween(5,7) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(401, 'Clear Skies')" MinFish="15" MaxFish="25" ShuffleFishSpots="True" ThaliaksFavor="True" CordialType="Auto" Chum="True">
			<FishSpots>
				<FishSpot XYZ="-352.8858, 19.60465, -832.8619" Heading="3.788245" Sit="True" />
			</FishSpots>
			<Keepers>
				<Keeper name="Sea Butterfly" />
			</Keepers>
			<SurfaceSlaps />
		</ExFish>
		<If condition="HasAtLeast(12810,1)">
			<Desynth ItemIds="12810" DesynthDelay="6000" DesynthTimeout="10" />
		</If>
		<If condition="HasAtLeast(12753,1)">
			<Desynth ItemIds="12753" DesynthDelay="6000" DesynthTimeout="10" />
		</If>
		<LLoadProfile Path="../../Start.xml" />
	</Order>
	<GrindAreas />
	<CodeChunks />
</Profile>