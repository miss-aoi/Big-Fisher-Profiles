			<Keepers>
				<Keeper name="Rudderfish" action="Mooch" />
				<Keeper name="Crystal Pigeon" />
			</Keepers>
			<SurfaceSlaps />
		</ExFish>
		<LLoadProfile Path="../../Start.xml" />
