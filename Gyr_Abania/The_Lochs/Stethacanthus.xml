<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Stethacanthus "1">

	<!-- DO NOT CHANGE -->
	<!ENTITY TIME_WINDOW  "Condition.IsTimeBetween(16,18)">
	<!ENTITY WEATHER_PAST "True">
