<!DOCTYPE Profile [
	<!-- Adjust to desired amount -->
	<!ENTITY Xenacanthus "1">

	<!-- DO NOT CHANGE -->
	<!ENTITY TIME_WINDOW  "Condition.IsTimeBetween(16,20)">
	<!ENTITY WEATHER_PAST "True">
