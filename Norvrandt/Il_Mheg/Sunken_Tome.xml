				<FishSpot XYZ="61.2729, 20.82541, -590.6793" Heading="0.2287085" />
				<FishSpot XYZ="40.46621, 17.84756, -584.0277" Heading="0.7690632" />
				<FishSpot XYZ="52.60523, 11.1583, -553.0342" Heading="0.05487919" />
			</FishSpots>
			<Keepers>
				<Keeper name="Sunken Tome" />
			</Keepers>
			<SurfaceSlaps />
