		<ExFish Bait="Versatile Lure" condition="Condition.IsTimeBetween(9,10)" Sit="True" SitRate="1">
			<FishSpots>
				<FishSpot XYZ="-218.0921, 8.740814, 760.5208" Heading="3.420164" />
			</FishSpots>
		</ExFish>
